<%- include('Customer header.ejs') %>
        <div class="container">
            <div class="row">
                <div class="col-sm-6 offset-sm-3">
                    <h3 style="background-color: black; color: wheat; padding: 20px; border-radius: 20px; text-align: center;">Change password</h3>
                    <form action="/Change_password" method="post">
                        <div class="mb-3">
                            <label class="form-label">e-mail ID:</label>
                            <input class="form-control" type="email" name="email" value="<%= emailID %>" readonly><br><br><br>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Existing password:</label>
                            <input class="form-control" type="password" name="password" required placeholder="Enter existing password"><br><br><br>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">New password:</label>
                            <input class="form-control" type="text" name="new_password" required placeholder="Enter new password"><br><br><br>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Confirm password:</label>
                            <input class="form-control" type="password" name="confirm_password" required placeholder="Re-enter new password"><br><br><br>
                        </div>
                        <div class="text-center">
                            <button class="btn btn-primary">Change password now</button>
                        </div><br>
                        <% if(message_002){ %>
                            <div class="text-center">
                                <h3 style="color: green;"><%- message_002 %></h3>
                            </div>
                        <% } %>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>