<%- include('Customer header.ejs') %>
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <table class="table table-striped table-bordered table-hover" id="DTable">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Product ID</th>
                                <th>Product Name</th>
                                <th>Customer Name</th>
                                <th>Customer e-mail ID</th>
                                <th>Customer Mobile</th>
                                <th>Customer Address</th>
                                <th>Order Processing</th>
                                <th>Shipping Status</th>
                                <th>Delivery Status</th>
                                <th>Payment Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var i=0;i<OrderData.length;i++){ %>
                                <tr>
                                    <td><%= OrderData[i].Order_ID %></td>
                                    <td><%= OrderData[i].Product_ID %></td>
                                    <td><%= OrderData[i].Product_Name %></td>
                                    <td><%= OrderData[i].Customer_Name %></td>
                                    <td><%= OrderData[i].Customer_EMailID %></td>
                                    <td><%= OrderData[i].Customer_Mobile %></td>
                                    <td><%= OrderData[i].Customer_Address %></td>
                                    <td><%= OrderData[i].Order_Processing %></td>
                                    <td><%= OrderData[i].Shipping_Status %></td>
                                    <td><%= OrderData[i].Delivery_Status %></td>
                                    <td>
                                        <a class="btn btn-primary" href="/Payment_details/<%= OrderData[i].Order_ID %>" onclick="return confirm('Do you want to check the status of the respective order?')">Check details
                                        </a>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <% if(message_101){ %>
            <center>
                <h1 class="text-success"><b><%= message_101 %></b></h1>
            </center>
        <% } %>
