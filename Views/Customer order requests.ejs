<%- include('Admin header.ejs') %>
        <table class="table table-striped table-bordered table-hover" id="CustomerTable">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>Customer Name</th>
                    <th>Customer e-mail ID</th>
                    <th>Customer Mobile</th>
                    <th>Customer Address</th>
                    <th>Order Processing</th>
                    <th>Shipping Status</th>
                    <th>Delivery Status</th>
                    <th>Update Status</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0;i<CrDB.length;i++){ %>
                    <tr>
                        <td><%= CrDB[i].Order_ID %></td>
                        <td><%= CrDB[i].Product_ID %></td>
                        <td><%= CrDB[i].Product_Name %></td>
                        <td><%= CrDB[i].Customer_Name %></td>
                        <td><%= CrDB[i].Customer_EMailID %></td>
                        <td><%= CrDB[i].Customer_Mobile %></td>
                        <td><%= CrDB[i].Customer_Address %></td>
                        <td><%= CrDB[i].Order_Processing %></td>
                        <td><%= CrDB[i].Shipping_Status %></td>
                        <td><%= CrDB[i].Delivery_Status %></td>
                        <td>
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#<%= CrDB[i].Order_ID %>">
                                Start update
                            </button>
                            <!-- Modal -->
                            <div class="modal fade" id="<%= CrDB[i].Order_ID %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel" style="align: center;"><b>Update Order Details</b></h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <form onsubmit="return Validate_<%= CrDB[i].Order_ID %>_0()" action="/Customer_order_request" method="post">
                                            <div class="modal-body">
                                                <div>
                                                    <div style="width: 200px; display: inline-block;">
                                                        <b>Customer Order ID</b>
                                                    </div>
                                                    <div style="width: 200px; display: inline-block;">
                                                        <input class="form-control" readonly type="text" name="CustOID" id="CustOID" value="<%= CrDB[i].Order_ID %>">
                                                    </div>
                                                </div><br>
                                                <div>
                                                    <div style="width: 200px; display: inline-block">
                                                        <b>New Order Processing Status</b>
                                                    </div>
                                                    <div class="form-floating" style="width: 200px; display: inline-block;">
                                                        <input class="form-control" type="text" name="CustOOP" id="<%= CrDB[i].Order_ID %>_1" value="" placeholder="<%= CrDB[i].Order_Processing %>">
                                                        <label for="<%= CrDB[i].Order_ID %>_1"><%= CrDB[i].Order_Processing %></label>
                                                    </div>
                                                </div><br>
                                                <div>
                                                    <div style="width: 200px; display: inline-block;">
                                                        <b>New Order Shipping Status</b>
                                                    </div>
                                                    <div class="form-floating" style="width: 200px; display: inline-block;">
                                                        <input class="form-control" type="text" name="CustOSS" id="<%= CrDB[i].Order_ID %>_2" value="" placeholder="<%= CrDB[i].Shipping_Status %>">
                                                        <label for="<%= CrDB[i].Order_ID %>_2"><%= CrDB[i].Shipping_Status %></label>
                                                    </div>
                                                </div><br>
                                                <div>
                                                    <div style="width: 200px; display: inline-block;">
                                                        <b>New Order Delivery Status</b>
                                                    </div>
                                                    <div class="form-floating" style="width: 200px; display: inline-block;">
                                                        <input class="form-control" type="text" name="CustODS" id="<%= CrDB[i].Order_ID %>_3" value="" placeholder="<%= CrDB[i].Delivery_Status %>">
                                                        <label for="<%= CrDB[i].Order_ID %>_3"><%= CrDB[i].Delivery_Status %></label>
                                                    </div>
                                                </div>
                                            </div><br>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                <button type="submit" class="btn btn-primary" name="submit" value="submit">Update now</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                    <script>
                        function Validate_<%= CrDB[i].Order_ID %>_0(Event){
                            var OOP=$('#<%= CrDB[i].Order_ID %>_1').val();
                            var OSS=$('#<%= CrDB[i].Order_ID %>_2').val();
                            var ODS=$('#<%= CrDB[i].Order_ID %>_3').val();
                            if(OOP=='' && OSS=='' && ODS==''){
                                alert('Kindly fill at least one field to be updated!!!');
                                return false;
                                Event.preventDefault();
                            }
                        }
                    </script>
                <% } %>
            </tbody>
        </table>
        <script>
            $(document).ready(function() {
                $('#CustomerTable').DataTable();
            });
        </script>
        <% if(message_010){ %>
            <script>
                $(document).ready(setTimeout(()=>{
                    alert('Item updated successfully!!!')
                },100))
            </script>
        <% } %>
