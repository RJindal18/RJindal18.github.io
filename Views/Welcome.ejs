<%- include('Customer header.ejs') %>
        <div class="container mt-4">
            <div class="row mt-4">
                <% for(var i=0;i<Record.length;i++){ %>
                    <div class="col-sm-3 mt-4">
                        <div class="card" style="width: 18rem;">
                            <img src="../Assets/My uploads/<%= Record[i].Product_Image %>" alt="../Assets/My uploads/<%= Record[i].Product_Image %>" height="200px" class="card-img-top">
                            <div class="card-body">
                                <h5 class="card-title"><%= Record[i].Product_Name %></h5>
                                <h5 class="card-title"><%= Record[i].Product_Price %></h5>
                                <p class="card-text"><%= Record[i].Product_Description %></p>
                                <a href="/My_product/<%= Record[i].Product_ID %>" class="btn btn-primary">Buy now</a>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
        <script src="../Public/JS/jquery-3.6.1.min.js"></script>
        <script src="../Public/JS/bootstrap.bundle.min.js"></script>
        <script src="../Public/JS/jquery.dataTables.min.js"></script>
        <script src="../Public/JS/dataTables.bootstrap5.min.js"></script>
    </body>
</html>